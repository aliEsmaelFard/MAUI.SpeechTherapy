<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.SpeechTherapy.Views.Components.CardComp">
    <Border Stroke="LightGray"
            StrokeThickness=".6"
            Style="{StaticResource border-shadow-light}"
            StrokeShape="RoundRectangle 12">

        <VerticalStackLayout>
            <HorizontalStackLayout FlowDirection="RightToLeft"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Spacing="8"
                                   Margin="16">

                <Image Source="call.png"
                       WidthRequest="24" />

                <Label  Text="{Binding Text}" 
                        FontSize="14"
                        FontFamily="Noto"
                        FontAttributes="Bold" />

            </HorizontalStackLayout>

            <BoxView HeightRequest="2"
                     BackgroundColor="{Binding ColorP}" />

            <ContentPresenter Content="{Binding Content, Source={x:Reference this}}" />

        </VerticalStackLayout>

    </Border>
</ContentView>
